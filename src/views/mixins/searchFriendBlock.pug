mixin searchFriend(friend = {}) 
    .search_person_block 
        img(src=friend.avatar)
        h4
            a(href=routes.person(friend.id))=friend.name
        if(user.id == friend.id)

        else
            if(friend.friend === 1) 
                .search_person_friendbutton 
                    i.fas.fa-check
                    h5.search_person_friend 친구 
            else 
                if(reqFriendList.indexOf(friend.id) === -1)
                    .search_person_addFriendbutton
                        i.fas.fa-user-plus  
                        h5.addFriend 친구추가
                    .serach_person_reqFriendbutton(style="display:none") 
                        i.fas.fa-check 
                        h5 요청함 
                else 
                    .search_person_addFriendbutton(style="display:none")
                        i.fas.fa-user-plus  
                        h5.addFriend 친구추가
                    .serach_person_reqFriendbutton(style="display:block") 
                        i.fas.fa-check 
                        h5 요청함 
                .search_targetid(style="display:none")=friend.id 
                .search_applicantid(style="display:none")=user.id   